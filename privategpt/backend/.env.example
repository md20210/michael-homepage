# Resend (Magic-Link E-Mails - 3000 free/month)
RESEND_API_KEY=your_resend_api_key_here

# Ollama (Local LLM) - WSL IP for Windows Backend access
# WICHTIG: Wenn Backend in Windows läuft und Ollama in WSL, verwende die WSL IP-Adresse
# Finde WSL IP mit: ip addr show eth0 | grep "inet " | awk '{print $2}' | cut -d/ -f1
# Und starte Ollama mit: OLLAMA_HOST=0.0.0.0:11434 ~/.local/bin/ollama serve
OLLAMA_BASE_URL=http://172.26.89.94:11434

# JWT Secret (generiere mit: openssl rand -hex 32)
JWT_SECRET=your_jwt_secret_here

# URLs
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:8000

# Database
DATABASE_URL=sqlite+aiosqlite:///./privategpt.db

# Email Config
FROM_EMAIL=onboarding@resend.dev
MAGIC_LINK_EXPIRY_MINUTES=15
SESSION_EXPIRY_DAYS=30

# Hybrid RAG - Web Search mit SearxNG
SEARXNG_URL=https://searx.be  # Öffentliche SearxNG-Instanz (oder eigene)
SEARXNG_MAX_RESULTS=5  # Max Anzahl Web-Suchergebnisse
ENABLE_WEB_SEARCH=true  # Web-Suche aktivieren (true/false)
WEB_SEARCH_THRESHOLD=0.3  # Confidence-Schwelle für Web-Suche (0.0-1.0)
